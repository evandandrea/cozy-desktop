@require '_spin'

.two-panes
  display flex
  flex-direction column
  width 100vw
  height 100vh

.two-panes__menu
  @extend $tabs-base .coz-tab-list
  display flex
  flex-direction line

.two-panes__menu__item
  @extend $tabs-base .coz-tab
  flex 0 1 50%
  text-align: center

.two-panes__menu__item--active
  @extend $tabs-base .coz-tab--active

.two-panes__content
  box-sizing border-box
  font-size: .8em

  a
    color blue
    text-decoration none

  h2
    font-size: 1.2em
    margin-top 1.8em

  h2:first-of-type
    margin-top .5em

  h3
    a
      color grey-06
      font-size 1em

  .help-list
    display flex
    padding 0
    li
      flex 1
      display inline-block
      box-sizing border-box
      padding 1em
    a
      display flex
      flex-direction column
      align-items center
    .icon
      display block
      width 96px
      height 96px
      margin-bottom .3em
      background-image url('images/sprite-help.svg')
      background-size auto 100%
      background-repeat no-repeat
    .icon--forum
      background-position 0 0
    .icon--irc
      background-position -96px 0
    .icon--github
      background-position -192px 0
    .icon--email
      background-position -288px 0
    .icon--twitter
      background-position -384px 0
    .icon--documentation
      background-position -480px 0

  .status
    display flex
    line-height 2
    padding 1em

  .status__icon
    flex-shrink 0
    box-sizing border-box
    width 2em
    height 2em
    border-radius 1em
    margin-right .5em
  .status__icon--uptodate
    background-color #27d179
    padding .2em
  .status__icon--offline
    background-color orange
    padding .2em
  .status__icon--sync
    background-color blue
    padding .1em
    animation rotate linear 1.3s infinite
  .status__icon--error
    background-color red

  .disk-space
    display flex
    line-height 2.4
  .disk-space__icon
    margin-right .5em

  .recent-files
    margin-bottom 0
    padding 0
    list-style none
    li
      display block
      height 3em
      min-height 48px
      padding .8em
      border-bottom 1px solid grey-03
      span
        color grey-05
  .file-name
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    margin .5em 0px .2em 0px
    font-weight: normal

  .file-size::after
    content ' â€¢ '
    margin 0 .25em
  .file-type
    display block
    float left
    width 48px
    height 48px
    margin-right .8em
    background-image url('images/sprite-files-type.svg')
    &.file-type-folder
      background-position 0 0
    &.file-type-file
      background-position -48px 0
    &.file-type-archive
      background-position -96px 0
    &.file-type-code
      background-position -144px 0
    &.file-type-text
      background-position -192px 0
    &.file-type-presentation
      background-position -240px 0
    &.file-type-spreadsheet
      background-position -288px 0
    &.file-type-pdf
      background-position -336px 0
    &.file-type-binary
      background-position -364px 0
    &.file-type-audio
      background-position -432px 0
    &.file-type-video
      background-position -480px 0
    &.file-type-image
      background-position -528px 4px

  .send-mail-to-support
    textarea
      width 100%
      height 10em
      background-color grey-01
      border 1px solid grey-03
      border-radius 5px
      margin-bottom .5em

  .message--success
    color blue
    font-weight bold

  .message--error
    color red
    font-weight bold


.two-panes__content--settings
  padding 1em

  .progress
    width 100%
    height .5em
    border 1px solid cool-grey
    border-radius .1em
    overflow hidden
    background-color pale-grey

    .progress-inner
      height 100%
      background-color blue

  strong
    width 25%
    color cool-grey
    display inline-block

  .btn--danger
    @extend $button
    @extend $button--danger-outline
    width 100%

    &:active, &:not([disabled]):not([aria-disabled=true]):hover, &:focus
      border 1px solid #fdcbcb

  .toggle
    margin-left 1em
    display inline-block
    vertical-align middle


.two-panes__content--help

  .btn--msg
    @extend $button
    @extend $button--regular
